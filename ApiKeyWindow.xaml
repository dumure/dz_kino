<Window x:Class="dz_kino.ApiKeyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:dz_kino"
        mc:Ignorable="d"
        Title="ApiKeyWindow" Height="200" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="TMDB API Ключ:" Margin="0,0,0,10"/>
            <TextBox Name="TmdbApiKeyTextBox" Width="300"/>
            <TextBlock Text="OMDB API Ключ:" Margin="0,10,0,10"/>
            <TextBox Name="OmdbApiKeyTextBox" Width="300"/>
            <Button Content="Отправить" Width="75" Margin="0,20,0,0" Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
